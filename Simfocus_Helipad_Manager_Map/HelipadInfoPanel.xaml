<UserControl x:Class="Simfocus_Helipad_Manager_Map.Controls.HelipadInfoPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             MinWidth="200" Padding="8" Background="White" BorderBrush="Black" BorderThickness="1">
    <StackPanel>
        <TextBlock x:Name="IdentText" FontWeight="Bold" FontSize="14"/>
        <TextBlock x:Name="NameText" Margin="0,2,0,0"/>
        <TextBlock x:Name="PathText" Margin="0,2,0,0" TextWrapping="Wrap"/>
        <Button x:Name="ToggleButton" Content="Toggle" Margin="0,6,0,0" Padding="4"/>
    </StackPanel>
</UserControl>